<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llProgressTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_sett30dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:layout_marginRight="@dimen/margin_left5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/psent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/txtsize_setting20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:layout_marginRight="@dimen/margin_left5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.bestspa.spa.client.Views.DotsProgressBar
                    android:id="@+id/dotsProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ll_height_calender"
            android:layout_marginLeft="@dimen/margin_left5"
            android:layout_marginRight="@dimen/margin_left5"
            android:layout_marginTop="@dimen/marginleft_term"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageUser"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/margin_left5" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/aUserNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/margin_left5"
                    android:text="@string/user_bok"
                    android:textColor="@color/colorPrimaryDarkToo"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.25"
                android:gravity="center"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/aRatingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:layout_margin="@dimen/margin_left5"
            android:background="@drawable/ll_template_back"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rlReviewCust"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/margin_left5"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/txtsize_setting20dp"
                    android:layout_height="@dimen/txtsize_setting20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margintopbuttom3dp"
                    android:background="@drawable/review_book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:text="@string/rev"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <TextView
                    android:id="@+id/aReviewCountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@color/latest_green" />

            <RelativeLayout
                android:id="@+id/rlFavouriteCust"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/margin_left5"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favImage"
                    android:layout_width="@dimen/txtsize_setting20dp"
                    android:layout_height="@dimen/txtsize_setting20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/favourite_book" />

                <TextView
                    android:id="@+id/favText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:text="@string/favo"
                    android:textColor="@color/latest_body_text_grey"
                    android:textSize="@dimen/txtsize14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <TextView
                    android:id="@+id/aFavTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/latest_body_text_grey"
                    android:textSize="@dimen/txtsize18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/txtsize_setting20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_left5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left5"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left5"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:text="@string/priceName"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txtserPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margintopbuttom3dp"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:text="@string/duration"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:text="@string/description_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txtserDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_left5"
                    android:layout_marginTop="@dimen/margintopbuttom3dp"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize18dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/txtsize_20dp"
                android:layout_height="@dimen/txtsize_20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:background="@drawable/calender1"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/aSelectedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:text="@string/sdate"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aBookingDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:text="7th April 2015"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/txtsize_20dp"
                android:layout_height="@dimen/txtsize_20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:background="@drawable/time"
                android:contentDescription="@string/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:text="@string/stime"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aBookingTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:text="10.30pm"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llStartP"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/txtsize_setting20dp"
                android:layout_height="@dimen/txtsize_setting20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:background="@drawable/price"
                android:contentDescription="@string/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:text="@string/startp"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStrtP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:text="1"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDiscount"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/txtsize_setting20dp"
                android:layout_height="@dimen/txtsize_setting20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:background="@drawable/price"
                android:contentDescription="@string/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:text="@string/disoffer"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDisCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:text="1"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCalConf"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center" />

            <RelativeLayout
                android:id="@+id/btnCall"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/margin_left5"
                android:layout_weight="1.0"
                android:background="@drawable/round_border_buttun"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/marginleft_term"
                    android:layout_height="@dimen/txtsize_setting20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin7dp"
                    android:background="@drawable/mobile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margintopbuttom3dp"
                    android:text="@string/call"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnEmail"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/margin_left5"
                android:layout_weight="1.0"
                android:background="@drawable/round_border_buttun"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/imgview_width25"
                    android:layout_height="@dimen/img_heightwidth16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mail_icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="4.0dip"
                    android:text="@string/email1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left5"
            android:layout_marginRight="@dimen/margin_left5"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aBookingTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintopbuttom3dp"
                android:layout_marginTop="@dimen/margintopbuttom3dp"
                android:inputType="textMultiLine"
                android:text="@string/cust_will"
                android:textColor="@color/latest_body_text_grey"
                android:textSize="@dimen/txtsize_15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aLayoutHome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left5"
            android:background="@drawable/border_grey"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintopbuttom3dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Address"
                    android:textColor="@color/latest_body_text_grey"
                    android:textSize="@dimen/txtsize14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/aAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_left5"
                    android:inputType="textMultiLine"
                    android:textColor="@color/latest_body_text_grey"
                    android:textSize="@dimen/txtsize14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="@dimen/imgview_heightwidth"
                android:layout_margin="@dimen/margin_left5"
                android:layout_marginRight="@dimen/leftmargin_imgview"
                android:layout_weight="0.7"
                android:background="@drawable/round_border_buttun"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnViewMap"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/round_border_buttun"
                    android:drawableLeft="@drawable/view_map2"
                    android:drawablePadding="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/marginleft_term"
                    android:text="@string/view_map"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize14dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProgressUnder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left5"
                android:layout_marginRight="@dimen/margin_left5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/awai_cust"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/txtsize_setting20dp"
                android:layout_marginLeft="@dimen/margin_left5"
                android:layout_marginRight="@dimen/margin_left5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.bestspa.spa.client.Views.DotsProgressBar
                    android:id="@+id/dotsProgressBarUnder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linComment">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_heightwidth16dp"
                    android:layout_height="@dimen/img_heightwidth16dp"
                    android:layout_marginLeft="10.0dip"
                    android:src="@drawable/descript_book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:text="@string/Comments"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtsize_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCommToCustSpa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:layout_marginRight="@dimen/leftmargin_imgview"
                    android:background="@drawable/rounded_border"
                    android:gravity="center|left|top"
                    android:hint="@string/comments"
                    android:inputType="textMultiLine"
                    android:maxLength="240"
                    android:minHeight="@dimen/llheight70dp"
                    android:paddingBottom="@dimen/margintopbuttom3dp"
                    android:paddingLeft="@dimen/llmargin_top_buttom"
                    android:paddingTop="@dimen/margintopbuttom3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_book" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/llCalendar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnAddCalendar"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:layout_marginRight="@dimen/marginleft_term"
                android:background="@drawable/round_border_buttun"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="@dimen/margin_left5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/llheight70dp"
                android:text="@string/addtocalender"
                android:textColor="@color/white"
                android:textSize="@dimen/img_heightwidth16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/marginleft_term"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/layoutAccept"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acceptConfirmBtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/marginleft_term"
                android:layout_marginRight="@dimen/marginleft_term"
                android:background="@color/latest_orange"
                android:drawableLeft="@drawable/sucess_book"
                android:drawablePadding="@dimen/margin_left5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/llheight80dp"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_15dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/cancelBtnBookingForConfirm"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
