<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutHead"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings"
                android:background="@color/actionbar"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/header_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/llheight_settings"
                    android:layout_margin="@dimen/margin_left5"
                    android:background="@drawable/border_grey"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageUser"
                            android:layout_width="@dimen/llheight_settings40dp"
                            android:layout_height="@dimen/llheight_settings40dp"
                            android:layout_marginLeft="@dimen/margin_left5" />

                        <TextView
                            android:id="@+id/aUserNameTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left5"
                            android:inputType="textMultiLine"
                            android:text="@string/user_bok"
                            android:textColor="@color/black"
                            android:textSize="@dimen/rightmarginimage15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RatingBar
                            android:id="@+id/aRatingBar"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/llheight_settings40dp"
                    android:layout_margin="@dimen/margin_left5"
                    android:background="@drawable/ll_template_back"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlReviewCust"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_margin="@dimen/margin_left5"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/txtsize_setting20dp"
                            android:layout_height="@dimen/txtsize_setting20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/margintopbuttom3dp"
                            android:background="@drawable/review_book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/margin_left5"
                            android:text="@string/rev"
                            android:textColor="@color/black"
                            android:textSize="@dimen/img_heightwidth16dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/aReviewCountTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:background="@color/latest_green" />

                    <RelativeLayout
                        android:id="@+id/rlFavouriteCust"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_margin="@dimen/margin_left5"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/favImage"
                            android:layout_width="@dimen/txtsize_setting20dp"
                            android:layout_height="@dimen/txtsize_setting20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/margin_left5"
                            android:background="@drawable/favourite_book" />

                        <TextView
                            android:id="@+id/favText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingLeft="@dimen/margintopbuttom3dp"
                            android:text="@string/favo"
                            android:textColor="@color/black"
                            android:textSize="@dimen/img_heightwidth16dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/aFavTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/llheight_sett30dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:paddingLeft="5.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/match"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSelectedSerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_left5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/imgview_heightwidth"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/txtsize_20dp"
                            android:layout_height="@dimen/txtsize_20dp"
                            android:layout_marginLeft="@dimen/margin_left5"
                            android:background="@drawable/calender1"
                            android:contentDescription="@string/image" />

                        <TextView
                            android:id="@+id/aSelectedTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/sdate"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/aBookingDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/imgview_heightwidth"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/txtsize_20dp"
                            android:layout_height="@dimen/txtsize_20dp"
                            android:layout_marginLeft="@dimen/margin_left5"
                            android:background="@drawable/time"
                            android:contentDescription="@string/image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="@string/stime"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/aBookingTimeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize14dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:layout_marginRight="@dimen/margin_left5"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/aBookingTypeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margintopbuttom3dp"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:inputType="textMultiLine"
                        android:text="@string/cust_will_i"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aLayoutHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_left5"
                    android:background="@drawable/border_grey"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margintopbuttom3dp"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize_15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/aAddressTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_left5"
                            android:inputType="textMultiLine"
                            android:textColor="@color/black"
                            android:textSize="14.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/imgview_heightwidth"
                        android:layout_margin="5.0dip"
                        android:layout_marginRight="@dimen/leftmargin_imgview"
                        android:layout_weight="0.7"
                        android:background="@color/latest_green"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnViewMap"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/latest_green"
                            android:drawableLeft="@drawable/view_map2"
                            android:drawablePadding="5.0dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:text="View Map"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txtsize14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_heightwidth16dp"
                    android:layout_height="@dimen/img_heightwidth16dp"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/price"
                    android:contentDescription="@string/image" />

                <TextView
                    android:id="@+id/txtDiscountTypeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etBookPriceSpa"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/llheight_sett30dp"
                    android:layout_marginBottom="@dimen/margintopbuttom3dp"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:layout_marginRight="@dimen/leftmargin_imgview"
                    android:layout_marginTop="@dimen/margintopbuttom3dp"
                    android:background="@null"
                    android:editable="false"
                    android:focusable="false"
                    android:paddingLeft="@dimen/margin7dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_book"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:text="@string/offered"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etBookDiscountSpa"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/llheight_sett30dp"
                        android:layout_marginBottom="@dimen/margintopbuttom3dp"
                        android:layout_marginLeft="@dimen/leftmargin_imgview"
                        android:layout_marginRight="@dimen/llmargin_top_buttom"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:background="@drawable/rounded_border"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/llmargin_top_buttom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_book" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/yourRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdDoller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ USD"
                            android:textSize="@dimen/txtsize13dp" />

                        <RadioButton
                            android:id="@+id/rdPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin7dp"
                            android:checked="true"
                            android:text="%"
                            android:textSize="@dimen/txtsize13dp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_heightwidth16dp"
                    android:layout_height="@dimen/img_heightwidth16dp"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/descript_book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:text="@string/Comments"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.spa.easyspa.model.ActionEditText
                    android:id="@+id/etCommToCustSpa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:layout_marginRight="@dimen/leftmargin_imgview"
                    android:background="@drawable/rounded_border"
                    android:gravity="center|left|top"
                    android:hint="@string/comments"
                    android:inputType="textMultiLine"
                    android:maxLength="240"
                    android:minHeight="@dimen/llheight70dp"
                    android:paddingBottom="@dimen/margintopbuttom3dp"
                    android:paddingLeft="@dimen/llmargin_top_buttom"
                    android:paddingTop="@dimen/margintopbuttom3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_book" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spPhoneCode"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/llheight_sett30dp"
                        android:layout_marginBottom="@dimen/margintopbuttom3dp"
                        android:layout_marginLeft="@dimen/leftmargin_imgview"
                        android:layout_marginRight="@dimen/leftmargin_imgview"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:background="@drawable/rounded_border"
                        android:inputType="number"
                        android:paddingLeft="@dimen/llmargin_top_buttom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_book" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/txtsize_setting20dp"
                        android:src="@drawable/dw_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/margin7dp"
                        android:layout_height="2.0dip"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etCustomerPhone2"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/llheight_sett30dp"
                        android:layout_marginBottom="@dimen/margintopbuttom3dp"
                        android:layout_marginLeft="@dimen/leftmargin_imgview"
                        android:layout_marginRight="@dimen/leftmargin_imgview"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:background="@drawable/rounded_border"
                        android:inputType="number"
                        android:maxLength="50"
                        android:paddingLeft="@dimen/llmargin_top_buttom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_book" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressLayout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/imgview_heightwidth"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/txtsize14dp"
                    android:layout_height="@dimen/txtsize_setting20dp"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:background="@drawable/address"
                    android:contentDescription="@string/image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:text="@string/addr_cust"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerEdit1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.spa.easyspa.model.ActionEditText
                    android:id="@+id/etBookAddressSpa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftmargin_imgview"
                    android:layout_marginRight="@dimen/leftmargin_imgview"
                    android:background="@drawable/rounded_border"
                    android:gravity="center|left|top"
                    android:hint="@string/door"
                    android:inputType="textMultiLine"
                    android:maxLength="240"
                    android:minHeight="@dimen/llheight70dp"
                    android:paddingBottom="@dimen/margintopbuttom3dp"
                    android:paddingLeft="@dimen/llmargin_top_buttom"
                    android:paddingTop="@dimen/margintopbuttom3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_book" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/marginleft_term"
                android:gravity="center_vertical"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:layout_marginRight="@dimen/leftmargin_imgview"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirmBookingBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/latest_orange"
                    android:drawableLeft="@drawable/sucess_book"
                    android:drawablePadding="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/llheight80dp"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_15dp" />
