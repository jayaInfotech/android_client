<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ll_width350dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_sett30dp"
            android:layout_marginBottom="@dimen/txtsize13dp"
            android:layout_marginTop="@dimen/txtsize13dp"
            android:layout_weight="1.0"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change your password"
                android:textSize="@dimen/txtsize_setting20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCurPass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margintopbuttom3dp"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:layout_marginRight="@dimen/leftmargin_imgview"
                android:layout_marginTop="@dimen/margintopbuttom3dp"
                android:background="@drawable/rounded_border"
                android:hint="@string/conp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/llmargin_top_buttom"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_book" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNewPass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margintopbuttom3dp"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:layout_marginRight="@dimen/leftmargin_imgview"
                android:layout_marginTop="@dimen/margintopbuttom3dp"
                android:background="@drawable/rounded_border"
                android:hint="@string/newp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/llmargin_top_buttom"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_book" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etReapeatPass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/margintopbuttom3dp"
                android:layout_marginLeft="@dimen/leftmargin_imgview"
                android:layout_marginRight="@dimen/leftmargin_imgview"
                android:layout_marginTop="@dimen/margintopbuttom3dp"
                android:background="@drawable/rounded_border"
                android:hint="@string/repeatp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/llmargin_top_buttom"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize_book" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/llheight_settings40dp"
            android:layout_marginTop="@dimen/margin7dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelPass"
                android:layout_width="@dimen/cancelBtn"
                android:layout_height="fill_parent"
                android:background="@color/latest_orange"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnDonePass"
                android:layout_width="@dimen/cancelBtn"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/txtsize_setting20dp"
                android:background="@color/latest_green"
                android:text="Save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/txtsize14dp"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>