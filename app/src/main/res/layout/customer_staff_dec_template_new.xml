<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/txtBookDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingLeft="@dimen/margin_left5"
                    android:paddingRight="@dimen/margin_left5"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_sett30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/margin_left5"
                    android:layout_marginRight="@dimen/margin_left5"
                    android:inputType="textMultiLine"
                    android:text="@string/user_detail"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/marginleft30dp"
                android:gravity="center|top"
                android:orientation="horizontal">

                <com.bestspa.spa.client.Views.DotsProgressBar
                    android:id="@+id/dotsProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left5"
                android:background="@drawable/border_grey"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/margin7dp"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/txtBusinessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/txtCustHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff will visit you at:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/txtCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="55.0dip"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/aRatingBar"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="1.0" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBtnViewMap"
                            android:layout_width="fill_parent"
                            android:layout_height="35.0dip"
                            android:layout_margin="5.0dip"
                            android:layout_marginRight="@dimen/leftmargin_imgview"
                            android:background="@drawable/round_border_buttun"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnViewMap"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/round_border_buttun"
                                android:drawableLeft="@drawable/view_map2"
                                android:drawablePadding="5.0dip"
                                android:gravity="center_vertical"
                                android:paddingLeft="10.0dip"
                                android:text="@string/view_map"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txtsize14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_margin="@dimen/margin_left5"
                android:background="@drawable/ll_template_back"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlReviewCust"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/txtsize_setting20dp"
                        android:layout_height="@dimen/txtsize_setting20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margintopbuttom3dp"
                        android:background="@drawable/review_book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="@string/rev"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize14dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtCustReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/latest_green" />

                <RelativeLayout
                    android:id="@+id/rlFavouriteCust"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/favImage"
                        android:layout_width="@dimen/txtsize_setting20dp"
                        android:layout_height="@dimen/txtsize_setting20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margintopbuttom3dp"
                        android:background="@drawable/favourite_book" />

                    <TextView
                        android:id="@+id/favText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="@string/favo"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize14dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtCustFavourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPageViwerRec"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/img_height190dp"
                android:layout_margin="@dimen/margin7dp"
                android:gravity="center"
                android:orientation="vertical">

                <ss.com.bannerslider.Slider
                    android:id="@+id/myfivepanelpagerRec"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@color/colorPrimaryDarkToo"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/llheight_sett30dp"
                android:layout_marginRight="@dimen/llheight_sett30dp"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="@string/priceName"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/txtserPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:text="@string/tenper"
                        android:id="@+id/discountOffered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margintopbuttom3dp"
                        android:textColor="@color/colorPrimaryDarkToo"
                        android:textSize="@dimen/txtsize22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="@string/duration"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/txtDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="@string/description_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/txtserDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_left5"
                        android:layout_marginTop="@dimen/margintopbuttom3dp"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize18dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/callLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <RelativeLayout
                    android:id="@+id/rlCall"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/round_border_buttun"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/marginleft_term"
                        android:layout_height="@dimen/txtsize_setting20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/txtsize13dp"
                        android:background="@drawable/mobile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/call"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlEmail"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/round_border_buttun"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/imgview_width25"
                        android:layout_height="@dimen/img_heightwidth16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/mail_icon2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4.0dip"
                        android:text="@string/email1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize18dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llSocialMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left5"
                android:background="@drawable/rounded_border"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llWebsite"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_left5"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="Website    "
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize13dp" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize13dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_left5"
                    android:layout_marginTop="@dimen/margin_left5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:text="Facebook "
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize13dp" />

                    <TextView
                        android:id="@+id/txtFb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize13dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/openingDataLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left5"
                android:background="@drawable/border_grey"
                android:orientation="vertical" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_sett30dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_left5"
                    android:gravity="left"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/margin7dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_15dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/discountRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutBooking"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/rejectBtnClick"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:background="@drawable/round_border_buttun_red"
                        android:drawableLeft="@drawable/close_book"
                        android:drawablePadding="@dimen/llmargin_top_buttom"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/llheight_settings40dp"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1.0dip"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/confirmBtnClick"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5.0dip"
                        android:background="@color/latest_orange"
                        android:drawableLeft="@drawable/sucess_book"
                        android:drawablePadding="@dimen/llmargin_top_buttom"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/llheight_settings40dp"
                        android:text="@string/confirm_cust"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cancelBtnBooking"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5.0dip"
                        android:background="@color/latest_red"
                        android:drawableLeft="@drawable/round_border_buttun_red"
                        android:drawablePadding="@dimen/llmargin_top_buttom"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/llheight_settings40dp"
                        android:text="@string/cancelbtn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1.0dip"
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/shareBtnClick"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5.0dip"
                        android:background="@drawable/round_border_buttun"
                        android:drawableLeft="@drawable/calendar"
                        android:drawablePadding="@dimen/llmargin_top_buttom"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/llheight_settings40dp"
                        android:text="@string/addtocalender"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancelLayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/llheight_settings40dp"
                android:layout_margin="7.0dip"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/cancelBtnBooking1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/latest_red"
                    android:drawableLeft="@drawable/close_book"
                    android:drawablePadding="@dimen/llmargin_top_buttom"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/cancelBtn"
                    android:text="Cancel booking"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize14dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/txtsize22dp"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bg_shadoww"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/notificationIdStoredTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bookingIDStoredTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/staffIDStoredTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

